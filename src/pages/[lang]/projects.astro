---
import { languages } from "../../i18n/ui";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Layout from "../../layouts/MdxPageLayout.astro";
import Project from "../../components/Project.astro";
import {  USERNAME } from "../../consts";

export async function getStaticPaths() {
  return Object.keys(languages).map((path) => ({ params: { lang: path } }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("seo.projects.title")} description={t("seo.projects.description")}>
  <Project
    user={USERNAME}
    repo="ae_sdk"
    desc={t("projects.ae_sdk.description")}
    repoTopLangShieldLink="https://img.shields.io/badge/-TypeScript-007ACC?style=flat-square&logo=typescript&logoColor=white"
    tags={["typescript", "sdk", "aliexpress"]}
  />
  <Project
    user={USERNAME}
    repo="reglini"
    desc={t("projects.reglini.description")}
    website="https://reglini-dz.com"
    repoTopLangShieldLink="https://img.shields.io/badge/-TypeScript-007ACC?style=flat-square&logo=typescript&logoColor=white"
    tags={[
      "nextjs",
      "vercel",
      "ecommerce",
      "internationalization",
      "pwa",
      "typescript",
      "prisma",
    ]}
  />
</Layout>
