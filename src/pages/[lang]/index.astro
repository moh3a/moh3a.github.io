---
import { SITE_TITLE, SITE_DESCRIPTION, BASE_PATH, LINKEDIN_LINK } from '../../consts';
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl,useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';
import {  ArrowRight } from 'lucide-preact';

export async function getStaticPaths() {
  return Object.keys(languages).map(path => ({ params: { lang: path } }))
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

let idx = 0;
// todo
const skills = [
  "Full-stack web development",
  "Front-end web development",
  "Node.js back-end development",
  "Website and landing page design"
];
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="my-10 flex justify-between items-center">
    <div class="relative z-10 text-2xl sm:text-3xl md:text-5xl basis-3/4">
      {t('home.mynameis')}
      <br/>
      <span class="font-extrabold">
        {t('home.name')}
      </span>
    </div>
    <img src={`${BASE_PATH}/profile.jpg`} class="z-0 rounded-full basis-1/4 w-40" />
  </div>
  <div class="my-16">
    <p>
      I am a quick learner and specialize in multitude of skills like
      <br/>
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500">  
        {skills[idx]}
      </span>
    </p>
  </div>
  <a href={LINKEDIN_LINK} target="_blank" rel="noreferrer" class="underline decoration-[var(--primary)]" >Get in touch <ArrowRight class="inline hover:animate-bounce" /> </a>
</Layout>
