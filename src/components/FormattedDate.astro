---
import { getLangFromUrl } from '../i18n/utils';
interface Props {
	date: Date;
}

const lang = getLangFromUrl(Astro.url);
const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(lang === 'en' ? 'en-US' : lang === 'fr' ? 'fr-FR' : 'ar-DZ', {
			year: 'numeric',
			month: 'long',
			day: 'numeric',
		})
	}
</time>
